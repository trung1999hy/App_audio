<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartNowActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prank_button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_wow" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/prank_button"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_above="@+id/setting_control"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/sky_blue"
        android:elevation="10dp"
        android:fontFamily="@font/tommy_bold"
        android:stateListAnimator="@null"
        android:text="@string/prank_txt"
        android:textAllCaps="false"
        android:textColor="@color/sky_blue_dark"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:strokeColor="@color/sky_blue_dark"
        app:strokeWidth="1.5dp" />

    <LinearLayout
        android:id="@+id/setting_control"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rate_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circular_ripple"
            android:backgroundTint="@color/sky_blue"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/sky_blue_dark"
            app:strokeWidth="1.5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_rate" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/share_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circular_ripple"
            android:backgroundTint="@color/sky_blue"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/sky_blue_dark"
            app:strokeWidth="1.5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_share" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>